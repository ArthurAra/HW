 #include <iostream>
#include <time.h>
#include <math.h>
using namespace std;

int main()
{
    srand(time(NULL));

    const int SIZE = 10;
    int arr1[SIZE], arr2[SIZE], arrR[SIZE];
    int head = 0, Sum = 0;
    for (int i = 0; i < SIZE; i++)
        {
            arr1[i] = 1 + rand() % 10;
            cout << arr1[i] << "\t";
        }
    cout << endl;
    for (int i = 0; i < SIZE; i++)
    {
        arr2[i] = 1 + rand() % 10;
        cout << arr2[i] << "\t";
    }
    cout << endl;
    for (int i = 0; i < SIZE; i++)
    {
        for ( int j = 0; j < SIZE; j++)
        {
            if(arr1[i] == arr2[j])
            {
                bool isExists = false;
                for( int k = 0; k < SIZE; k++)
                {
                    if(arrR[k] == arr1[i])
                    {

                        isExists = true;
                    }
                }

                if (isExists == false)
                {
                    arrR[head] = arr1[i];
                    head++;
                }
            }
        }
    }

    for (int i = 0; i < head; i++)
    {
        cout << arrR[i] << "\t";
    }
    cout << endl;
    for (int i = 0; i < head; i++)
    {
        Sum += arrR[i];
    }
    cout << Sum;                    
}
