#include <iostream>
#include <time.h>
#include <clocale>
using namespace std;

int main()
{
    srand(time(NULL));

    const int SIZE = 10;
    int arr[SIZE], m;
    for (int i = 0; i < SIZE; i++)
        {
            arr[i] = -100 + rand() % 200;
            cout << arr[i] << "\t";
        }
    cout << endl;
    for (int i = 0; i < SIZE; i++)
    {
        if (arr[i] > 0)
        {
            for (int f = i + 1; f < SIZE; f++)
            {
                if (arr[f] < 0)
                {
                    int temp = arr[f];
                    arr[f] = arr[i];
                    arr[i] = temp;
 
                    break;
                }
            }

        }
    }
    {
        for (int i = 0; i < SIZE; i++)
        {
            cout << arr[i] << "\t";
        }
    }
}
