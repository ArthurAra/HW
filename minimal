#include <iostream>
#include <time.h>
using namespace std;

int main()
{
    srand(time(NULL));

    const int SIZE = 10;
    int arr[SIZE];
    int min = 0;
    for (int i = 0; i < SIZE; i++)
        {
            arr[i] = -10 + rand() % 10;
            cout << arr[i] << "\t";
        }
    cout << endl;
    for (int i = 0; i < SIZE; i++)
        if (arr[i] < min)
            min = arr[i];
    cout << min;
}
