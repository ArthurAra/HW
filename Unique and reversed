#include <iostream>
#include <time.h>
using namespace std;


int main()
{
    srand(time(NULL));

    const int SIZE = 10;

    int arrayWithoutRepeats[SIZE];
    for (int i = 0; i < SIZE; i++)
    {
        int randomNumber = 1 + rand() % 10;

        bool isAdded = false;
        while (isAdded == false)
        {
            bool numberExists = false;
            for (int j = 0; j < SIZE; j++)
            {
                if (arrayWithoutRepeats[j] == randomNumber)
                {
                    numberExists = true;
                    break;
                }
            }

            if (numberExists == false)
            {
                arrayWithoutRepeats[i] = randomNumber;
                isAdded = true;
            }

            randomNumber = 1 + rand() % 10;
        }
        cout << arrayWithoutRepeats[i] << "\t";
    }
    cout << endl;
    for (int i = 0; i < SIZE / 2; i++)
    {
        int temp = arrayWithoutRepeats[i];
        arrayWithoutRepeats[i] = arrayWithoutRepeats[SIZE - i - 1];
        arrayWithoutRepeats[SIZE - i - 1] = temp;
    }

    for (int i = 0; i < SIZE; i++)
    {
        cout << arrayWithoutRepeats[i] << "\t";
    }

}
